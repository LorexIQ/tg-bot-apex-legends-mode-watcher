{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@composables/*": ["./.engine/composables/*"],
      "@root/*": ["./.engine/root/*"],
    }
  },
  "include": [".engine/**/*", "./src/**/*"],
  "exclude": ["./node_modules/**", "./dist/**"],
}
